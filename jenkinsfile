pipeline {
    agent any
	tools { 
		maven 'maven-3.6.2' 
		jdk 'JDK8' 
	    }	
	   parameters {
        choice(name: 'rama', choices: ['desarrollo', 'produccion'], description: 'Seleccionar la rama sobre la que realizar la integraci√≥n')
    }
	
	stages{
		
		stage('Recursos') {
			steps {
				git url: 'https://github.com/CursoCI/ejercicioJenkinsFile.git', branch: "${params.rama}"
			}
		}
	}
}
