pipeline {
    agent any
    	tools { 
		maven 'maven-3.6.2' 
		jdk 'JDK8' 
	    }	
	stages{
		
		stage('Recursos') {
			steps {
				git url: 'https://github.com/CursoCI/ejercicioJenkinsFile.git', branch: 'desarrollo'
			}
		}
		
		
		stage('Configuracion ') {
			steps {
				bat 'mvn -Dmaven.test.failure.ignore=true install' 
			    }
			    post {
				success {
				    junit 'target/surefire-reports/**/*.xml' 
				}
			    }
		}
		
		
	}
}
